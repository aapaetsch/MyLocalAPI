[
  {
    "group": "Audio Control",
    "enabled_setting": "audio.enabled",
    "endpoints": [
      {
        "path": "/audio/device/switch",
        "method": "GET",
        "params": "key=<label>&token=<token> OR id=<device_id>&token=<token>",
        "description": "Switch default audio device",
        "test_params": "key=headphones"
      },
      {
        "path": "/volume",
        "method": "GET",
        "params": "percent=<0-100>&token=<token>",
        "description": "Set system volume percentage",
        "test_params": "percent=50"
      },
      {
        "path": "/volume/current",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get current volume and device info",
        "test_params": ""
      },
      {
        "path": "/audio/device/current",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get current default device info",
        "test_params": ""
      },
      {
        "path": "/audio/devices",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get list of playback audio devices",
        "test_params": ""
      },
      {
        "path": "/audio/set_default",
        "method": "POST",
        "params": "JSON body { \"device_id\" or \"device_name\" } & token in query",
        "description": "Set default audio device via POST JSON payload",
        "test_params": "{ \"device_id\": \"<device_id>\" }"
      },
      {
        "path": "/audio/current",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get current audio device and volume",
        "test_params": ""
      },
      {
        "path": "/list",
        "method": "GET",
        "params": "token=<token>",
        "description": "List all playback devices",
        "test_params": ""
      }
    ]
  },
  {
    "group": "Streaming Services",
    "enabled_setting": "streaming.launch_streaming_by_endpoint",
    "endpoints": [
      {
        "path": "/streaming/launch",
        "method": "GET",
        "params": "service=<youtube|crunchyroll|netflix|disney|prime|appletv>&token=<token>&showID=<optional>",
        "description": "Alternative endpoint to launch streaming service. If `showID` is provided, supported services will open the show's info/detail page (Netflix, Prime, Crunchyroll).",
        "test_params": "service=netflix&showID=81287311"
      }
    ]
  },
  {
    "group": "Gaming",
    "enabled_setting": "gaming.enabled",
    "endpoints": [
      {
        "path": "/gaming/launch",
        "method": "GET",
        "params": "label=<game_label>&token=<token> OR steamid=<steam_app_id>&token=<token> OR path=<exe_path>&token=<token>",
        "description": "Launch a game by label, Steam App ID, or executable path",
        "test_params": "label=Example Game"
      },
      {
        "path": "/gaming/games",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get list of configured games",
        "test_params": ""
      },
      {
        "path": "/gaming/games",
        "method": "POST",
        "params": "label=<label>&steam_appid=<steam_appid>&token=<token> OR exe_path=<path>&token=<token>",
        "description": "Add a new game mapping (provide label and at least one of steam_appid or exe_path)",
        "test_params": "label=New Game&steam_appid=12345"
      }
    ]
  },
  {
    "group": "Fan Control",
    "enabled_setting": "fan.enabled",
    "endpoints": [
      {
        "path": "/fan/apply",
        "method": "GET",
        "params": "name=<config>&token=<token> OR percent=<0-100>&token=<token>",
        "description": "Apply fan configuration or percentage",
        "test_params": "percent=50"
      },
      {
        "path": "/fan/refresh",
        "method": "GET",
        "params": "token=<token>",
        "description": "Refresh fan sensors",
        "test_params": ""
      },
      {
        "path": "/fan/configs",
        "method": "GET",
        "params": "token=<token>&nearestTo=<percent>",
        "description": "Get available fan configurations",
        "test_params": "nearestTo=75"
      },
      {
        "path": "/fan/status",
        "method": "GET",
        "params": "token=<token>",
        "description": "Get fan control status",
        "test_params": ""
      }
    ]
  },
